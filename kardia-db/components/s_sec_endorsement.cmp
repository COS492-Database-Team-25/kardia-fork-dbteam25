$Version=2$
s_sec_endorsement_component "widget/component-decl"
    {
    width=835;height=635;
    s_sec_endorsement_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :s_subject, :s_date_modified, :s_context, :s_created_by, :__cx_osml_control, :s_date_created, :s_endorsement FROM /lightsys/partner_DB/s_sec_endorsement/rows";
        baseobj = "/lightsys/partner_DB/s_sec_endorsement/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        s_sec_endorsement_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            s_sec_endorsement_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            s_sec_endorsement_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                s_sec_endorsement_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_endorsement_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_endorsement; text="endorsement"; type="editbox"; form=s_sec_endorsement_form; tooltip="endorsement to be granted -- "; }
                    s_context_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_context; text="context"; type="editbox"; form=s_sec_endorsement_form; tooltip="context of endorsement -- "; }
                    s_subject_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_subject; text="subject"; type="editbox"; form=s_sec_endorsement_form; tooltip="name of subject being granted the endorsement (username, group name) -- "; }
                    }
                s_sec_endorsement_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=s_sec_endorsement_form; tooltip=" -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=s_sec_endorsement_form; tooltip=" -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=s_sec_endorsement_form; tooltip=" -- "; }
                    }
                s_sec_endorsement_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=s_sec_endorsement_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=s_sec_endorsement_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
