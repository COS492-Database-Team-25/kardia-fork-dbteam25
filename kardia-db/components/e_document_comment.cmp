$Version=2$
e_document_comment_component "widget/component-decl"
    {
    width=835;height=635;
    e_document_comment_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :e_workflow_state_id, :e_target_review_period, :s_date_created, :e_collaborator, :s_date_modified, :s_created_by, :e_target_collaborator, :__cx_osml_control, :e_document_id, :e_doc_comment_id, :e_comments FROM /lightsys/partner_DB/e_document_comment/rows";
        baseobj = "/lightsys/partner_DB/e_document_comment/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        e_document_comment_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            e_document_comment_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            e_document_comment_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                e_document_comment_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    e_document_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_document_id; text="document id"; type="editbox"; form=e_document_comment_form; tooltip="The ID of the document. -- "; }
                    e_doc_comment_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_doc_comment_id; text="doc comment id"; type="editbox"; form=e_document_comment_form; tooltip="The ID of the comment -- "; }
                    e_comments_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_comments; text="comments"; type="editbox"; form=e_document_comment_form; tooltip="Comments made about the document -- "; }
                    }
                e_document_comment_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    e_collaborator_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_collaborator; text="collaborator"; type="editbox"; form=e_document_comment_form; tooltip="The collaborator making the comments -- "; }
                    e_workflow_state_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_workflow_state_id; text="workflow state id"; type="editbox"; form=e_document_comment_form; tooltip="The workflow state, if any, of the document at the time the comments were made. -- "; }
                    e_target_collaborator_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_target_collaborator; text="target collaborator"; type="editbox"; form=e_document_comment_form; tooltip="A target collaborator (or collaborator group) for the comments. If set, it will create a to-do item for that collaborator. -- "; }
                    }
                e_document_comment_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    e_target_review_period_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_target_review_period; text="target review period"; type="editbox"; form=e_document_comment_form; tooltip="The number of days the collaborator has to review the comments and acknowledge them (this sets a due date for the to-do item mentioned above). -- "; }
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=e_document_comment_form; tooltip=" -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=e_document_comment_form; tooltip=" -- "; }
                    }
                e_document_comment_hbox3 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=e_document_comment_form; tooltip=" -- "; }
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=e_document_comment_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=e_document_comment_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
