$Version=2$
r_group_component "widget/component-decl"
    {
    width=835;height=635;
    r_group_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :r_group_file, :r_is_active, :r_group_module, :s_date_created, :r_group_description, :s_date_modified, :s_created_by, :__cx_osml_control, :r_group_name FROM /lightsys/partner_DB/r_group/rows";
        baseobj = "/lightsys/partner_DB/r_group/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        r_group_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            r_group_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            r_group_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                r_group_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    r_group_name_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=r_group_name; text="group name"; type="editbox"; form=r_group_form; tooltip="short name of the report group. -- "; }
                    r_group_description_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=r_group_description; text="group description"; type="editbox"; form=r_group_form; tooltip="description of the report group -- "; }
                    r_group_module_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=r_group_module; text="group module"; type="editbox"; form=r_group_form; tooltip="directory name of the module containing the report to run (e.g., 'base', 'rcpt', 'disb', etc.) -- "; }
                    }
                r_group_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    r_group_file_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=r_group_file; text="group file"; type="editbox"; form=r_group_form; tooltip="file name of the .rpt file in the above module. -- "; }
                    r_is_active_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=r_is_active; text="is active"; type="editbox"; form=r_group_form; tooltip="Whether or not the group is 'active'. Kardia may come with many preconfigured report groups that are not activated by the user yet. -- "; }
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=r_group_form; tooltip=" -- "; }
                    }
                r_group_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=r_group_form; tooltip=" -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=r_group_form; tooltip=" -- "; }
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=r_group_form; tooltip=" -- "; }
                    }
                r_group_hbox3 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=r_group_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
