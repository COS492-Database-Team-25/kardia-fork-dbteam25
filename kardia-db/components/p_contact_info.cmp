$Version=2$
p_contact_info_component "widget/component-decl"
    {
    width=835;height=635;
    p_contact_info_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :p_contact_id, :p_contact_type, :p_phone_country, :s_date_created, :s_date_modified, :p_contact_comments, :p_partner_key, :p_location_id, :p_record_status_code, :s_created_by, :p_phone_area_city, :p_contact_data, :__cx_osml_control FROM /lightsys/partner_DB/p_contact_info/rows";
        baseobj = "/lightsys/partner_DB/p_contact_info/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        p_contact_info_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            p_contact_info_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            p_contact_info_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                p_contact_info_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    p_partner_key_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_partner_key; text="partner key"; type="editbox"; form=p_contact_info_form; tooltip=" -- "; }
                    p_contact_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_contact_id; text="contact id"; type="editbox"; form=p_contact_info_form; tooltip=" -- "; }
                    p_contact_type_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_contact_type; text="contact type"; type="editbox"; form=p_contact_info_form; tooltip="P=phone, F=fax, C=cell, E=email, W=website -- "; }
                    }
                p_contact_info_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    p_location_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_location_id; text="location id"; type="editbox"; form=p_contact_info_form; tooltip="Either the ID of the associated location, or a 'location type' (W, H, etc...) -- "; }
                    p_phone_country_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_phone_country; text="phone country"; type="editbox"; form=p_contact_info_form; tooltip=" -- "; }
                    p_phone_area_city_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_phone_area_city; text="phone area city"; type="editbox"; form=p_contact_info_form; tooltip=" -- "; }
                    }
                p_contact_info_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    p_contact_data_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_contact_data; text="contact data"; type="editbox"; form=p_contact_info_form; tooltip=" -- "; }
                    p_record_status_code_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_record_status_code; text="record status code"; type="editbox"; form=p_contact_info_form; tooltip="A=active, O=obsolete -- "; }
                    p_contact_comments_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_contact_comments; text="contact comments"; type="editbox"; form=p_contact_info_form; tooltip=" -- "; }
                    }
                p_contact_info_hbox3 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=p_contact_info_form; tooltip=" -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=p_contact_info_form; tooltip=" -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=p_contact_info_form; tooltip=" -- "; }
                    }
                p_contact_info_hbox4 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=p_contact_info_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=p_contact_info_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
