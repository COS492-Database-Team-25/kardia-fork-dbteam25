$Version=2$
a_period_component "widget/component-decl"
    {
    width=835;height=635;
    a_period_osrc "widget/osrc"
        {
        sql="SELECT :a_period_desc, :a_archived, :a_period_comment, :a_period, :a_first_opened, :__cx_osml_control, :a_status, :a_ledger_number, :s_modified_by, :a_parent_period, :a_summary_only, :s_date_created, :s_date_modified, :s_created_by, :a_last_closed, :a_end_date, :a_start_date FROM /lightsys/partner_DB/a_period/rows";
        baseobj = "/lightsys/partner_DB/a_period/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        a_period_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            a_period_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            a_period_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                a_period_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    a_period_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_period; text="period"; type="editbox"; form=a_period_form; tooltip="accounting period (alphanumeric allowed) -- "; }
                    a_ledger_number_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_ledger_number; text="ledger number"; type="editbox"; form=a_period_form; tooltip="ledger number (alphanumeric allowed) -- "; }
                    a_parent_period_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_parent_period; text="parent period"; type="editbox"; form=a_period_form; tooltip="period that this period summarizes into (month -> quarter -> year). Normally NULL for the year. -- "; }
                    }
                a_period_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    a_status_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_status; text="status"; type="editbox"; form=a_period_form; tooltip="accounting period status (N)ever opened, (O)pen for transactions, (C)losed, (A)rchived -- "; }
                    a_summary_only_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_summary_only; text="summary only"; type="editbox"; form=a_period_form; tooltip="Set this if the period is for summary use only (e.g., quarters and years) and does not actually take transactions -- "; }
                    a_start_date_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_start_date; text="start date"; type="editbox"; form=a_period_form; tooltip="date, in principle, that this accounting period begins -- "; }
                    }
                a_period_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    a_end_date_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_end_date; text="end date"; type="editbox"; form=a_period_form; tooltip="date, in principle, that this accounting period ends -- "; }
                    a_first_opened_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_first_opened; text="first opened"; type="editbox"; form=a_period_form; tooltip="date the period was actually first opened -- "; }
                    a_last_closed_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_last_closed; text="last closed"; type="editbox"; form=a_period_form; tooltip="date the period was actually last closed -- "; }
                    }
                a_period_hbox3 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    a_archived_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_archived; text="archived"; type="editbox"; form=a_period_form; tooltip="date the period was archived -- "; }
                    a_period_desc_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_period_desc; text="period desc"; type="editbox"; form=a_period_form; tooltip="short description of period, for reporting -- "; }
                    a_period_comment_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_period_comment; text="period comment"; type="editbox"; form=a_period_form; tooltip="comments / long description of accounting period -- "; }
                    }
                a_period_hbox4 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=a_period_form; tooltip=" -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=a_period_form; tooltip=" -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=a_period_form; tooltip=" -- "; }
                    }
                a_period_hbox5 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=a_period_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=a_period_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
