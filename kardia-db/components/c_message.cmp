$Version=2$
c_message_component "widget/component-decl"
    {
    width=835;height=635;
    c_message_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :s_date_modified, :c_message, :c_message_id, :s_created_by, :c_chat_id, :__cx_osml_control, :s_date_created FROM /lightsys/partner_DB/c_message/rows";
        baseobj = "/lightsys/partner_DB/c_message/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        c_message_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            c_message_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            c_message_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                c_message_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    c_message_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=c_message_id; text="message id"; type="editbox"; form=c_message_form; tooltip="The id of a message in a specific chat. -- "; }
                    c_chat_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=c_chat_id; text="chat id"; type="editbox"; form=c_message_form; tooltip="The foreign key to the chat that this is part of. -- "; }
                    c_message_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=c_message; text="message"; type="editbox"; form=c_message_form; tooltip="The actual message that is being held -- "; }
                    }
                c_message_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=c_message_form; tooltip="The time that the message was sent out. -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=c_message_form; tooltip="This is used for the person that created the message. -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=c_message_form; tooltip=" -- "; }
                    }
                c_message_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=c_message_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=c_message_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
