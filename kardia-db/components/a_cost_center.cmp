$Version=2$
a_cost_center_component "widget/component-decl"
    {
    width=835;height=635;
    a_cost_center_osrc "widget/osrc"
        {
        sql="SELECT :a_cc_desc, :a_reporting_level, :a_is_external, :a_cost_center, :__cx_osml_control, :a_restricted_type, :a_legacy_code, :a_ledger_number, :s_modified_by, :a_cc_comments, :a_is_balancing, :a_is_posting, :a_cost_center_class, :s_date_created, :a_bal_cost_center, :a_parent_cost_center, :s_date_modified, :s_created_by FROM /lightsys/partner_DB/a_cost_center/rows";
        baseobj = "/lightsys/partner_DB/a_cost_center/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        a_cost_center_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            a_cost_center_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            a_cost_center_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                a_cost_center_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    a_cost_center_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_cost_center; text="cost center"; type="editbox"; form=a_cost_center_form; tooltip="cost center code (alphanumeric allowed) -- "; }
                    a_ledger_number_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_ledger_number; text="ledger number"; type="editbox"; form=a_cost_center_form; tooltip="ledger number that uses this cost center -- "; }
                    a_parent_cost_center_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_parent_cost_center; text="parent cost center"; type="editbox"; form=a_cost_center_form; tooltip="cost center that this data rolls up into for reporting (within same ledger) -- "; }
                    }
                a_cost_center_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    a_bal_cost_center_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_bal_cost_center; text="bal cost center"; type="editbox"; form=a_cost_center_form; tooltip="a_bal_cost_center = a_is_balancing?a_cost_center:a_parent_cost_center -- "; }
                    a_cost_center_class_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_cost_center_class; text="cost center class"; type="editbox"; form=a_cost_center_form; tooltip="classification (could be others too): (ADM)inistration & General, (FUN)draising, (MIN)istry / Program Services. -- "; }
                    a_reporting_level_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_reporting_level; text="reporting level"; type="editbox"; form=a_cost_center_form; tooltip="at what detail level should this costctr be shown (in reports); smaller number = less detail, more generalized report -- "; }
                    }
                a_cost_center_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    a_is_posting_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_is_posting; text="is posting"; type="editbox"; form=a_cost_center_form; tooltip="enables posting to this cost center -- "; }
                    a_is_external_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_is_external; text="is external"; type="editbox"; form=a_cost_center_form; tooltip="Does the cost center represent a subdivision of the local entity, or is it foreign/external? -- "; }
                    a_is_balancing_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_is_balancing; text="is balancing"; type="editbox"; form=a_cost_center_form; tooltip="Is this a true cost center which self-balances (satisfies the accounting equation), or is it merely a fund within a cost center? -- "; }
                    }
                a_cost_center_hbox3 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    a_restricted_type_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_restricted_type; text="restricted type"; type="editbox"; form=a_cost_center_form; tooltip="Fund restriction code: N = not restricted, T = temporarily restricted, P = permanently restricted -- "; }
                    a_cc_desc_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_cc_desc; text="cc desc"; type="editbox"; form=a_cost_center_form; tooltip="short description of cost center, for reporting -- "; }
                    a_cc_comments_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_cc_comments; text="cc comments"; type="editbox"; form=a_cost_center_form; tooltip="comments / long description of cost center -- "; }
                    }
                a_cost_center_hbox4 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    a_legacy_code_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_legacy_code; text="legacy code"; type="editbox"; form=a_cost_center_form; tooltip="Legacy cost center code, from data import -- "; }
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=a_cost_center_form; tooltip=" -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=a_cost_center_form; tooltip=" -- "; }
                    }
                a_cost_center_hbox5 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=a_cost_center_form; tooltip=" -- "; }
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=a_cost_center_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=a_cost_center_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
