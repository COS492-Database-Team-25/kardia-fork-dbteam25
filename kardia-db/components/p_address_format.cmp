$Version=2$
p_address_format_component "widget/component-decl"
    {
    width=835;height=635;
    p_address_format_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :s_date_modified, :p_country_code, :s_created_by, :p_address_set, :__cx_osml_control, :s_date_created, :p_format FROM /lightsys/partner_DB/p_address_format/rows";
        baseobj = "/lightsys/partner_DB/p_address_format/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        p_address_format_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            p_address_format_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            p_address_format_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                p_address_format_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    p_address_set_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_address_set; text="address set"; type="editbox"; form=p_address_format_form; tooltip="Set of address formats being used -- "; }
                    p_country_code_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_country_code; text="country code"; type="editbox"; form=p_address_format_form; tooltip="Country for address format (from p_country table / p_country_code in p_location) -- "; }
                    p_format_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_format; text="format"; type="editbox"; form=p_address_format_form; tooltip="Format of address, to be evaluated with Centrallix substitute() function. -- "; }
                    }
                p_address_format_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=p_address_format_form; tooltip=" -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=p_address_format_form; tooltip=" -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=p_address_format_form; tooltip=" -- "; }
                    }
                p_address_format_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=p_address_format_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=p_address_format_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
