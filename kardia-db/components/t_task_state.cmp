$Version=2$
t_task_state_component "widget/component-decl"
    {
    width=835;height=635;
    t_task_state_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :t_task_state_type, :s_date_created, :t_task_state_label, :s_date_modified, :t_task_state_sequence, :s_created_by, :__cx_osml_control, :t_task_state_id FROM /lightsys/partner_DB/t_task_state/rows";
        baseobj = "/lightsys/partner_DB/t_task_state/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        t_task_state_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            t_task_state_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            t_task_state_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                t_task_state_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    t_task_state_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=t_task_state_id; text="task state id"; type="editbox"; form=t_task_state_form; tooltip="unique ID for the task state -- "; }
                    t_task_state_label_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=t_task_state_label; text="task state label"; type="editbox"; form=t_task_state_form; tooltip="short label for the task state -- "; }
                    t_task_state_sequence_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=t_task_state_sequence; text="task state sequence"; type="editbox"; form=t_task_state_form; tooltip="the order of the task states -- "; }
                    }
                t_task_state_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    t_task_state_type_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=t_task_state_type; text="task state type"; type="editbox"; form=t_task_state_form; tooltip="Type of task state: 'N' = task not started, 'I' = task in progress, 'C' = task completion -- "; }
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=t_task_state_form; tooltip=" -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=t_task_state_form; tooltip=" -- "; }
                    }
                t_task_state_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=t_task_state_form; tooltip=" -- "; }
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=t_task_state_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=t_task_state_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
