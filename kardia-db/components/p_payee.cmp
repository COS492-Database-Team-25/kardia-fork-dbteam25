$Version=2$
p_payee_component "widget/component-decl"
    {
    width=835;height=635;
    p_payee_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :p_contact_id, :s_date_created, :s_date_modified, :p_partner_key, :p_location_id, :s_created_by, :__cx_osml_control, :a_gl_account_code, :p_account_with_payee, :p_allow_payments, :a_gl_ledger_number FROM /lightsys/partner_DB/p_payee/rows";
        baseobj = "/lightsys/partner_DB/p_payee/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        p_payee_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            p_payee_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            p_payee_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                p_payee_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    p_partner_key_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_partner_key; text="partner key"; type="editbox"; form=p_payee_form; tooltip="The partner key of this payee -- "; }
                    a_gl_ledger_number_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_gl_ledger_number; text="gl ledger number"; type="editbox"; form=p_payee_form; tooltip="The GL ledger in our system used for tracking the payable (liability acct) -- "; }
                    a_gl_account_code_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=a_gl_account_code; text="gl account code"; type="editbox"; form=p_payee_form; tooltip="The GL account in our system used for tracking the payable (liability acct) -- "; }
                    }
                p_payee_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    p_account_with_payee_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_account_with_payee; text="account with payee"; type="editbox"; form=p_payee_form; tooltip="The account number with the payee (e.g., if payee is a business and we have an account with them) -- "; }
                    p_allow_payments_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_allow_payments; text="allow payments"; type="editbox"; form=p_payee_form; tooltip="Whether to permit payments to this payee -- "; }
                    p_location_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_location_id; text="location id"; type="editbox"; form=p_payee_form; tooltip="The location id (address) to use for issuing payments to this payee -- "; }
                    }
                p_payee_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    p_contact_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=p_contact_id; text="contact id"; type="editbox"; form=p_payee_form; tooltip="The contact info id (email/phone/etc) to use as a "best contact for" this payee -- "; }
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=p_payee_form; tooltip=" -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=p_payee_form; tooltip=" -- "; }
                    }
                p_payee_hbox3 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=p_payee_form; tooltip=" -- "; }
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=p_payee_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=p_payee_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
