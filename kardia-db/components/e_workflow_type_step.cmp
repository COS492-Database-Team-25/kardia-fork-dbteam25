$Version=2$
e_workflow_type_step_component "widget/component-decl"
    {
    width=835;height=635;
    e_workflow_type_step_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :e_workflow_id, :e_workflow_step_id, :e_workflow_step_label, :s_date_created, :e_collaborator, :s_date_modified, :s_created_by, :__cx_osml_control, :e_workflow_step_desc, :e_workflow_step_days, :e_workflow_step_trigger_type, :e_workflow_step_trigger FROM /lightsys/partner_DB/e_workflow_type_step/rows";
        baseobj = "/lightsys/partner_DB/e_workflow_type_step/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        e_workflow_type_step_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            e_workflow_type_step_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            e_workflow_type_step_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                e_workflow_type_step_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    e_workflow_step_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_workflow_step_id; text="workflow step id"; type="editbox"; form=e_workflow_type_step_form; tooltip="A particular workflow step -- "; }
                    e_workflow_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_workflow_id; text="workflow id"; type="editbox"; form=e_workflow_type_step_form; tooltip="A particular workflow -- "; }
                    e_workflow_step_label_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_workflow_step_label; text="workflow step label"; type="editbox"; form=e_workflow_type_step_form; tooltip="A short label for the workflow step -- "; }
                    }
                e_workflow_type_step_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    e_workflow_step_desc_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_workflow_step_desc; text="workflow step desc"; type="editbox"; form=e_workflow_type_step_form; tooltip="A long description of the workflow step -- "; }
                    e_workflow_step_trigger_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_workflow_step_trigger; text="workflow step trigger"; type="editbox"; form=e_workflow_type_step_form; tooltip="What triggers this workflow state. See the trigger type, below, for the context for this number (e.g. workflow step id or document id) -- "; }
                    e_workflow_step_trigger_type_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_workflow_step_trigger_type; text="workflow step trigger type"; type="editbox"; form=e_workflow_type_step_form; tooltip="The type of trigger for this workflow state: STEP for being triggered by another step, DOC for being triggered by the upload of a document type, DOCP for triggering when a document is associated with a partner. Other types will be added in the future. -- "; }
                    }
                e_workflow_type_step_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    e_collaborator_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_collaborator; text="collaborator"; type="editbox"; form=e_workflow_type_step_form; tooltip="The collaborator or collaborator group that is responsible for handling this workflow step. -- "; }
                    e_workflow_step_days_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_workflow_step_days; text="workflow step days"; type="editbox"; form=e_workflow_type_step_form; tooltip="The number of days the collaborator or collab group has to handle a document in this workflow step. -- "; }
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=e_workflow_type_step_form; tooltip=" -- "; }
                    }
                e_workflow_type_step_hbox3 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=e_workflow_type_step_form; tooltip=" -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=e_workflow_type_step_form; tooltip=" -- "; }
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=e_workflow_type_step_form; tooltip=" -- "; }
                    }
                e_workflow_type_step_hbox4 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=e_workflow_type_step_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
