$Version=2$
t_project_component "widget/component-decl"
    {
    width=835;height=635;
    t_project_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :t_project_color, :t_project_start, :t_project_id, :s_date_created, :t_project_end, :t_project_desc, :s_date_modified, :t_project_label, :s_created_by, :__cx_osml_control FROM /lightsys/partner_DB/t_project/rows";
        baseobj = "/lightsys/partner_DB/t_project/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        t_project_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            t_project_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            t_project_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                t_project_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    t_project_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=t_project_id; text="project id"; type="editbox"; form=t_project_form; tooltip="unique project ID -- "; }
                    t_project_label_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=t_project_label; text="project label"; type="editbox"; form=t_project_form; tooltip="a short label (name) for the project. -- "; }
                    t_project_desc_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=t_project_desc; text="project desc"; type="editbox"; form=t_project_form; tooltip="a description for the project -- "; }
                    }
                t_project_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    t_project_start_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=t_project_start; text="project start"; type="editbox"; form=t_project_form; tooltip="starting date for the project -- "; }
                    t_project_end_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=t_project_end; text="project end"; type="editbox"; form=t_project_form; tooltip="ending date for the project -- "; }
                    t_project_color_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=t_project_color; text="project color"; type="editbox"; form=t_project_form; tooltip="a color (hex triplet, "#ffffff", or common name, "white") for the project -- "; }
                    }
                t_project_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=t_project_form; tooltip=" -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=t_project_form; tooltip=" -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=t_project_form; tooltip=" -- "; }
                    }
                t_project_hbox3 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=t_project_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=t_project_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
