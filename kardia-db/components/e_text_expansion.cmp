$Version=2$
e_text_expansion_component "widget/component-decl"
    {
    width=835;height=635;
    e_text_expansion_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :e_exp_expansion, :s_date_modified, :s_created_by, :__cx_osml_control, :s_date_created, :e_exp_desc, :e_exp_tag FROM /lightsys/partner_DB/e_text_expansion/rows";
        baseobj = "/lightsys/partner_DB/e_text_expansion/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        e_text_expansion_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            e_text_expansion_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            e_text_expansion_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                e_text_expansion_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    e_exp_tag_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_exp_tag; text="exp tag"; type="editbox"; form=e_text_expansion_form; tooltip="The short tag to be expanded -- "; }
                    e_exp_desc_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_exp_desc; text="exp desc"; type="editbox"; form=e_text_expansion_form; tooltip="A brief description of the tag/expansion -- "; }
                    e_exp_expansion_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_exp_expansion; text="exp expansion"; type="editbox"; form=e_text_expansion_form; tooltip="The expansion of the short tag (i.e., a phrase or paragraph). -- "; }
                    }
                e_text_expansion_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=e_text_expansion_form; tooltip=" -- "; }
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=e_text_expansion_form; tooltip=" -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=e_text_expansion_form; tooltip=" -- "; }
                    }
                e_text_expansion_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=e_text_expansion_form; tooltip=" -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=e_text_expansion_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
