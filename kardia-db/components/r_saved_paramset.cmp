$Version=2$
r_saved_paramset_component "widget/component-decl"
    {
    width=835;height=635;
    r_saved_paramset_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :r_is_personal, :r_paramset_id, :s_date_created, :r_module, :s_date_modified, :r_paramset_desc, :s_created_by, :__cx_osml_control, :r_file FROM /lightsys/partner_DB/r_saved_paramset/rows";
        baseobj = "/lightsys/partner_DB/r_saved_paramset/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        r_saved_paramset_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            r_saved_paramset_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            r_saved_paramset_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                r_saved_paramset_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    r_paramset_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=r_paramset_id; text="paramset id"; type="editbox"; form=r_saved_paramset_form; tooltip="unique id for the parameter set -- "; }
                    r_paramset_desc_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=r_paramset_desc; text="paramset desc"; type="editbox"; form=r_saved_paramset_form; tooltip="description of the parameter set -- "; }
                    r_module_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=r_module; text="module"; type="editbox"; form=r_saved_paramset_form; tooltip="directory name of the module containing the report to run (e.g., 'base', 'rcpt', 'disb', etc.) -- "; }
                    }
                r_saved_paramset_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    r_file_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=r_file; text="file"; type="editbox"; form=r_saved_paramset_form; tooltip="file name of the .rpt file in the above module. -- "; }
                    r_is_personal_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=r_is_personal; text="is personal"; type="editbox"; form=r_saved_paramset_form; tooltip="Set to 1 if the parameter set is available only to its creator. Otherwise, everyone can see the parameter set. -- "; }
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=r_saved_paramset_form; tooltip=" -- "; }
                    }
                r_saved_paramset_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=r_saved_paramset_form; tooltip=" -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=r_saved_paramset_form; tooltip=" -- "; }
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=r_saved_paramset_form; tooltip=" -- "; }
                    }
                r_saved_paramset_hbox3 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=r_saved_paramset_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
