$Version=2$
e_text_search_occur_component "widget/component-decl"
    {
    width=835;height=635;
    e_text_search_occur_osrc "widget/osrc"
        {
        sql="SELECT :__cx_osml_control, :e_sequence, :e_word_id, :e_eol, :e_document_id FROM /lightsys/partner_DB/e_text_search_occur/rows";
        baseobj = "/lightsys/partner_DB/e_text_search_occur/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        e_text_search_occur_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            e_text_search_occur_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            e_text_search_occur_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                e_text_search_occur_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    e_word_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_word_id; text="word id"; type="editbox"; form=e_text_search_occur_form; tooltip="The ID of the word -- "; }
                    e_document_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_document_id; text="document id"; type="editbox"; form=e_text_search_occur_form; tooltip="The word -- "; }
                    e_sequence_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_sequence; text="sequence"; type="editbox"; form=e_text_search_occur_form; tooltip="The sequence in which the word occurs in the document -- "; }
                    }
                e_text_search_occur_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    e_eol_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=e_eol; text="eol"; type="editbox"; form=e_text_search_occur_form; tooltip="1 = word was followed by a line break or other break in the original document -- "; }
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=e_text_search_occur_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
