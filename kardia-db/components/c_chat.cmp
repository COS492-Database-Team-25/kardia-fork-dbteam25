$Version=2$
c_chat_component "widget/component-decl"
    {
    width=835;height=635;
    c_chat_osrc "widget/osrc"
        {
        sql="SELECT :s_modified_by, :c_public, :s_date_created, :c_last_send, :c_title, :s_date_modified, :c_chat_id, :s_created_by, :__cx_osml_control, :c_last_message_id FROM /lightsys/partner_DB/c_chat/rows";
        baseobj = "/lightsys/partner_DB/c_chat/rows";
        replicasize=6;
        readahead=6;
        autoquery=onload;
        ConfirmWindow "widget/childwindow"
            {
            title = "Data Was Modified!";
            titlebar = yes;
            hdr_bgcolor="#c00000";
            bgcolor= "#e0e0e0";
            visible = false;
            style = dialog;
            x=200;y=200;width=300;height=140;

            warninglabel "widget/label"
                {
                x=10;y=10;width=276;height=30;
                text="Some data was modified.  Do you want to save it first, discard your modifications, or simply cancel the operation?";
                }

            _3bConfirmSave "widget/textbutton"
                {
                x=10;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Save";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmDiscard "widget/textbutton"
                {
                x=110;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Discard";
                fgcolor1=black;fgcolor2=white;
                }
            _3bConfirmCancel "widget/textbutton"
                {
                x=210;y=75;width=80;height=30;
                tristate=no;
                background="/sys/images/grey_gradient.png";
                text = "Cancel";
                fgcolor1=black;fgcolor2=white;
                }
            }
        c_chat_form "widget/form"
            {
            _3bconfirmwindow = "ConfirmWindow";
            c_chat_ctl "widget/component"
                {
                x=0;y=0;width=835;height=24;
                path="/sys/cmp/form_controls.cmp";
                bgcolor="#d0d0d0";
                }
            c_chat_vbox "widget/vbox"
                {
                x=10;y=40;width=800;height=800;cellsize=20; spacing=5;
                c_chat_hbox0 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    c_chat_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=c_chat_id; text="chat id"; type="editbox"; form=c_chat_form; tooltip="The synthetic key that serves to identify the unique chat. -- "; }
                    c_last_send_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=c_last_send; text="last send"; type="editbox"; form=c_chat_form; tooltip="The time of the last message to be sent. -- This am thinking this should be denormalized (as it is) so that the retrieved list of tables can be ordered by this. (It is not too essential that it is updated.)"; }
                    c_last_message_id_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=c_last_message_id; text="last message id"; type="editbox"; form=c_chat_form; tooltip="The message_id of the last message to be sent. -- This can be used in combination with the user's data to see if there is any new data in a chat for each user."; }
                    }
                c_chat_hbox1 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    c_public_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=c_public; text="public"; type="editbox"; form=c_chat_form; tooltip="If the chat is public or not. ('Y' or 'N' for yes or no) -- "; }
                    c_title_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=c_title; text="title"; type="editbox"; form=c_chat_form; tooltip="The title of the chat. -- "; }
                    s_date_created_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_created; text="date created"; type="editbox_moddate"; form=c_chat_form; tooltip=" -- "; }
                    }
                c_chat_hbox2 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    s_created_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_created_by; text="created by"; type="editbox_creby"; form=c_chat_form; tooltip=" -- "; }
                    s_date_modified_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_date_modified; text="date modified"; type="editbox_credate"; form=c_chat_form; tooltip="This is not the same as the time of the last message sent. This is the time that things such as the chat name or chat publicity were modified. -- "; }
                    s_modified_by_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=s_modified_by; text="modified by"; type="editbox_modby"; form=c_chat_form; tooltip=" -- "; }
                    }
                c_chat_hbox3 "widget/hbox"
                {
                    x=0;y=0;
                    cellsize=250;
                    spacing=20;
                    width=750;
                    height=25;
                    __cx_osml_control_cmp "widget/component" { path="/lightsys/smart_field.cmp"; field=__cx_osml_control; text=" cx osml control"; type="editbox"; form=c_chat_form; tooltip=" -- "; }
                    }
                }
            }
        }
    }
