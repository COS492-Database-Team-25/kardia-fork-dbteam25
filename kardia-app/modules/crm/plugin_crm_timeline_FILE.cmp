$Version=2$
plugin_crm_timeline_FILE "widget/component-decl"
    {
    width=418;
    height=90;

    e_reference_info "widget/parameter" { type=string; }
    e_info "widget/parameter" { type=string; }
    partner_key "widget/parameter" { type=string; }
    shortdate "widget/parameter" { type=string; }

    item_pane "widget/pane"
	{
	x=0; y=0;
	height=90;
	width=418;
	style=bordered;
	bgcolor=white;
	border_color="#e0e0e0";
	border_radius=2;
	shadow_offset=1;
	shadow_color="#c0c0c0";

	item_hbox "widget/hbox"
	    {
	    x=3; y=1;
	    width=400; height=84;
	    spacing=8;

	    item_icon "widget/image"
		{
		y=2;
		width=26;
		height=26;
		source="/apps/kardia/images/tango/document-new.png";
		}

	    item_text_vbox "widget/vbox"
		{
		width=350;
		spacing=4;

		item_desc "widget/label" { height=14; text=runserver(:this:e_info); }
		item_date "widget/label" { height=11; font_size=8; fgcolor="#a0a0a0"; text=runserver(:this:shortdate); }

		item_image_hbox "widget/hbox"
		    {
		    height=48; align=center;
		    item_image "widget/image" { width=48; source=runserver( (select :e_current_folder + '/' + :e_current_filename from /apps/kardia/data/Kardia_DB/e_document/rows where :e_document_id = convert(integer, substring(:this:e_reference_info,1,charindex('|',:this:e_reference_info) - 1))) ); }
		    }
		}
	    }
	}
    }
