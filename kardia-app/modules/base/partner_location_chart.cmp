		    cnt = :s_integer_value
		from
		    /apps/kardia/data/Kardia_DB/s_stats_cache/rows
		where
		    :s_stat_type = 'PARTNERLOC'
		order by
		    charindex('Other', :s_stat) asc,
		    :s_integer_value desc
	
