	readahead=100;
	replicasize=100;
	//autoquery=onload;

	chart_link "widget/rule"
	    {
	    ruletype=osrc_relationship;
	    target=ledger_osrc;
	    target_key_1=Ledger;
	    key_1=ledger;
	    revealed_only=yes;
	    }

	chart "widget/chart"
	    {
	    x=0;
	    y=0;
	    width=257;
	    height=135;
	    fl_width=10;
	    fl_height=10;
	    chart_type="doughnut";
	    title=runserver(:this:chart_title);
	    titlecolor="#334466";
	    legend_position="right";
	    start_at_zero=yes;
	    title_size=16;

	    series1 "widget/chart-series"
		{
		//color=runserver(:this:before_bar_color);
		y_column="cnt";
		}
	    
	    y_axis "widget/chart-axis" 
		{
		axis="y";
		label="Partners By Location";
		}

